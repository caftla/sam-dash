#export-to-excel
		padding:0 12px
		cursor:pointer
		border:solid 5px #eee
		border-bottom:none
		padding:1em 0.5em
		background-color:#eee

.print-only
	display: none !important

@page
	size: A4

@media print   
		body 
			width: 100%
			height: 100%
			padding: 0

		.no-print, .no-print *
			display: none !important

		.print-only
			display: block !important

		.invoice
			margin: 0 auto 0 auto
			page-break-after: always

		.print_styles
			background-color: #fff
			color: #000
			font-family: Helvetica
			font-size: 8pt !important
			overflow: visible

			-webkit-touch-callout:none
			-webkit-text-size-adjust: none
			-webkit-font-smoothing: antialiased

		.footer
			height: 140px
			position: fixed
			bottom: 0

		.header
			height: 140px		
			position: fixed
			top: 0
    