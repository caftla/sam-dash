#export-to-excel
		padding:0 12px
		cursor:pointer
		border:solid 5px #eee
		border-bottom:none
		padding:1em 0.5em
		background-color:#eee

.print-only
	display: none !important

.account-manager input label
	float: left

.account-manager
	padding: 5px 2px
	margin: 5px
	background-color: #f3f3f3

.pdf-label
	width: auto
	margin: 0 20px
	font-size: 13px !important
	font-weight: bold
	white-space: nowrap
	overflow: visible

input[type="text"].pdf-input
	width: 200px
	height: 25px
	font-size: 13px
	border: none
	
.error-msg
	font-size: 12px
	color: red
	margin-left: 20px

.tables
	border-collapse: collapse
	margin: 40px auto 0 auto
	width: 80%
	font-size: 14px

.fa-spin-custom {
    -webkit-animation: spin 1000ms infinite linear
    animation: spin 1000ms infinite linear
	}
@keyframes spin {
    0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }
    100% {
        -webkit-transform: rotate(359deg);
        transform: rotate(359deg);
    }
}

@-webkit-keyframes spin {
    0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }
    100% {
        -webkit-transform: rotate(359deg);
        transform: rotate(359deg);
    }
}

@page
	size: A4

@media print   
	body 
		width: 100%
		height: 100%
		padding: 0

	.no-print, .no-print *
		display: none !important

	.print-only
		display: block !important

	.invoice
		margin: 0 auto 0 auto
		page-break-after: always
	
	.page-break
		page-break-after: always
	
	.bolder-text
		font-weight: bolder

	.print_styles
		background-color: #fff
		color: #000
		font-family: Helvetica
		font-size: 8pt !important
		overflow: visible

		-webkit-touch-callout:none
		-webkit-text-size-adjust: none
		-webkit-font-smoothing: antialiased
	
	table
		font-size: 8pt !important
	
	.tables
		margin: 20px auto 0 auto