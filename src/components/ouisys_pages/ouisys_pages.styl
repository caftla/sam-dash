.top-spacer 
	margin-top 100px
.top-spacer, .top-spacer * 
		font-size: 14px !important
		.warning
			background-color red
		ul 
			list-style-type none
			margin 0
			margin-bottom 20px
			padding 0
			overflow hidden
			background-color #9ac355

		li 
			float left
			a 
				display block
				color #000
				font-weight bold
				text-align center
				padding 5px 16px
				text-decoration none
				&:hover 
					background-color #353843
					color #fff
				&.active
					background-color #353843
					color #fff
		.large-text
			padding 3px
			max-width 100px
			max-height: 200px
			border solid 1px #eee
			overflow scroll
		h1 
			font-size 22px !important
			color #000
.create-campaign-wrapper 
	margin-top 100px
.link 
	white-space nowrap
	max-width 150px
	overflow hidden
	text-overflow ellipsis
.btn-warning
	background-color: orange
.cjlqAH 
	display flex
	flex-direction row
	justify-content space-between
	button 
		flex 1
.modal-wrapper 
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	background rgba(0, 0, 0, 0.7)
	z-index 999
	display flex
	flex-direction row
	justify-content center
	align-items center
.well 
	background #fff
	padding 20px
	border-radius 8px
.legals-actions-wrapper{
	display flex
	flex-direction column
}
.legals-well 
	width: 100%
	min-height 100% 
	background #eee
	padding 20px
	padding-top 200px
	border-radius 8px
	display flex
	justify-content center
	align-items center
	.legals-col
		display flex
		flex-direction row
		justify-content space-between
	.legal-form-group
		display flex
		flex-direction column
		flex:1
		margin 5px
		input, select, textarea 
			width 100%
			margin 8px 0
			display inline-block
			border 1px solid #ccc
			box-shadow inset 0 1px 3px #ddd
			border-radius 4px
			-webkit-box-sizing border-box
			-moz-box-sizing border-box
			box-sizing border-box
			padding-left 20px
			padding-right 20px
			padding-top 12px
			padding-bottom 12px
		textarea
			height 70px
.btns
	display: flex
	flex-direction: row
.dataTable
	min-width 900px
.loader-wrapper 
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	background rgba(0, 0, 0, 0.7)
	z-index 999
	display flex
	flex-direction row
	justify-content center
	align-items center
	span 
		color #fff