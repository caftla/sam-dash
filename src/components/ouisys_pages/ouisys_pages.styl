.top-spacer 
	margin-top 100px
.top-spacer, .top-spacer * 
		font-size: 11px !important
		.warning
			background-color red
		ul 
			list-style-type none
			margin 0
			margin-bottom 20px
			padding 0
			overflow hidden
			background-color #9ac355

		li 
			float left
			a 
				display block
				color #000
				font-weight bold
				text-align center
				padding 5px 16px
				text-decoration none
				&:hover 
					background-color #353843
					color #fff
				&.active
					background-color #353843
					color #fff
		.large-text
			padding 3px
			max-width 100px
			max-height: 200px
			border solid 1px #eee
			overflow scroll
		h1 
			font-size 22px !important
			color #000
			margin 10px
