body
  margin:0
  padding:0
  background-color: #ffffff
  font-family: Osaka, CONSOLAS, monospace, sans-serif

#main-top
  height:60px
  display:block
  position:relative
  background-color:#353843

  .logo-area
    height:60px
    width:300px
    display:block
    position:relative
    background-color: #8cc63e

    img
      left:0
      right:0
      top:6px
      width:100px
      display:block
      margin:0 auto
      position:absolute
      
   .tabs
     top:0
     left:320px
     position:absolute

     
	  a
	    color:#999dac
	    font-size:14px
	    cursor:pointer
	    padding:9px 15px
	    text-decoration:none
	    display:inline-block
	    margin: 22px 2px 0 2px
	    background-color:#3e424f
	    border-radius: 6px 6px 0px 0px
	
	    &:hover,
	    &.active
	     color:#ffffff
	     background-color:#6da424
	     
   .actions
     top:14px
     right:20px
     position:absolute		

     a
       width:80px
       margin:0 3px
       color:#ffffff
       font-size:14px
       padding:7px 10px
       text-align:center
       border-radius:4px
       display:inline-block
       text-decoration:none
       background-color:#6da424

       &:hover
        background-color:#8cc63e	
					

.main-bottom
  display:block
  position:relative

.main-left
  top:0
  left:0
  bottom:0
  width: 270px
  padding:15px
  display:block
  position:absolute
  height:calc(100vh - 90px) 
  background-color: #353843
  transition:0.5s ease-in-out
  -webkit-transition:0.5s ease-in-out

.main-right
  display:block
  overflow:scroll
  margin-left:300px
  height:calc(100vh - 60px) 
  background-color: #ffffff

.main-table
  width:100%

  tr:hover
    background-color:#ebffcf

.route-message
  font-size: 1em
  margin: 2em
  
 @media only screen and (max-width : 768px)
 
 .logo-area
   width:100%!important
   
   img
    left:10px!important
    margin:0!important
   
	.actions
	  display:none
	  
	.tabs
	  display:none
	  left:0!important
	  right:0!important
	  top:60px!important
	  z-index:2!important
	  position:absolute!important
	  
	  &.show
	  	display:block

		a
		 margin:0px!important
		 display:block!important
		 border-radius:0px!important

	
	.main-left
	  left:-330px
	  overflow:hidden
	  overflow-y:scroll
	  
	  &.show
	   left:0px!important
	
	.main-right
	  margin:0 10px
	  overflow:scroll
	
	.main-table
	  padding:10px 0!important
	  width:1020px!important
	
